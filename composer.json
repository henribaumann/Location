{
    "name": "patrickkempff/location",
    "type": "library",
    "description": "A simple library for dealing with (geo) locations.",
    "keywords": [
        "location",
        "geo",
        "coodinates"
    ],
    "homepage": "https://github.com/patrickkempff/Location",
    "support": {
        "issues": "https://github.com/patrickkempff/Location/issues",
        "source": "https://github.com/patrickkempff/Location"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Patrick Kempff",
            "email": "patrickkempff@gmail.com",
            "homepage": "http://patrickkempff.nl"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "beberlei/assert": "~2.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~1.11",
        "satooshi/php-coveralls": "~1.0",
        "phpunit/phpunit": "~4.0|~5.0"
    },
    "autoload": {
        "psr-4": {
            "Location\\": "src/Location/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit; ./vendor/bin/php-cs-fixer fix -v --diff --dry-run;",
        "phpunit": "./vendor/bin/phpunit;",
        "phpcs": "./vendor/bin/php-cs-fixer fix -v --diff --dry-run;"
    }
}